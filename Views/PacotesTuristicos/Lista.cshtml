@model List<PacotesTuristicos>

@{
    ViewData["Title"] = "Listagem de pacotes turísticos";
}

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Origem</td>
             <td>Destino</td>
             <td>Atrativos</td>
             <td>Saida</td>
             <td>Retorno</td>
             <td>Usuário</td>
        </tr>
    </thead>



    @foreach (PacotesTuristicos u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Nome</td>
            <td>@u.Origem</td>
            <td>@u.Destino</td>
            <td>@u.Atrativos</td>
            <td>@u.Saida.ToShortDateString()</td>
            <td>@u.Retorno.ToShortDateString()</td>
            <td>@u.Usuario</td>

            <td>
                <a href="/PacotesTuristicos/Editar?Id=@u.Id">Alterar</a>
                <a href="/PacotesTuristicos/Remover?Id=@u.Id" onclick="return confirm('Confirma excluir esse registro');">Excluir</a>

            </td>

        </tr>


    }

</table>