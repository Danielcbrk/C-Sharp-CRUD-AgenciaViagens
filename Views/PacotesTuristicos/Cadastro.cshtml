@using Microsoft.AspNetCore.Http;
@model PacotesTuristicos

@{
    ViewData["Title"] = "Cadastro";
}

<form method="POST" asp-action="Cadastro">

    <!-- 
        Aqui devera ter o 7 atributos de pacots turisticos:
        Id, Nome, Origem, ...,Usuario

    -->

    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" required />
    </p>

    <p>
        <label asp-for="Origem">Origem:</label>
        <input asp-for="Origem" />
    </p>

    <p>
        <label asp-for="Destino">Destino:</label>
        <input asp-for="Destino" />
    </p>

    <p>
        <label asp-for="Atrativos">Atrativos:</label>
        <input asp-for="Atrativos" />
    </p>

    <p>
        <label asp-for="Saida">Sa√≠da:</label>
        <input asp-for="Saida" type="date" />
    </p>

    <p>
        <label asp-for="Retorno">Retorno:</label>
        <input asp-for="Retorno" type="date" />
    </p>

    <p>
        <label asp-for="Usuario">Usuario:</label>
        <!--<input asp-for="Usuario" />-->
        <input asp-for="Usuario" value='@Context.Session.GetInt32("IdUsuario")' />
    </p>



    

    <p>
        <input type="submit" value="Cadastro">
    </p>

    

</form>

<p>
    @ViewBag.Message
</p>